def rtTriangle(symbol):
     '''
     objective: to print a right triangle
     input parameters: 
                      symbol is used to print the triangle
     approach: print several lines using the symbol entered by the user
     '''
     
     print ('   ',symbol)
     print ('  ',symbol,symbol)
     print (' ',symbol,symbol,symbol)
     print ('',symbol,symbol,symbol,symbol)
    
def main():
     '''
     objective: to print a right triangle
     input parameters: 
                    symbol : takes the symbol to be used to draw the triangle
     approach: to use the function rtTriangle
     '''
     symbol = input('Enter the symbol: ')
     rtTriangle(symbol)
     print ('End of Function')
      
if __name__=='__main__':
     main()
     print ('End of Program')
